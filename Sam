  <script>
    function showPopup(choice) {
      const popup = document.getElementById('popup');
      const text = document.getElementById('popup-text');
      let message = "";

      if (choice === 'truth') {
        message = "Whatâ€™s one thought about me you had recentlyâ€¦ but didnâ€™t say out loud?";
      } else if (choice === 'dare') {
        message = "Send me a voice note whispering something you wouldnâ€™t dare say in public.";
      } else if (choice === 'dream') {
        message = "Describe a dream date night â€” with me, no budget, no limits.";
      }

      text.textContent = message;
      popup.classList.add('active');
    }

    function closePopup() {
      document.getElementById('popup').classList.remove('active');
    }
  </script>
